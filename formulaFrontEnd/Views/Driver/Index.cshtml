@model IEnumerable<formulaFrontEnd.ViewModels.Driver>

@{
    ViewData["Title"] = "Index";
}

<h1>Top 10 Greatest F1 Drivers</h1>


<table class="table bg-light table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.driverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.surname)
            </th>
            <th>moreInfo</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.driverId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.surname)
            </td>
            <td>
                @Html.ActionLink("Races-Info", "RacesInfo", new { surname = item.surname }) |
                @Html.ActionLink("Constructors", "CocstructorInfo", new { surname = item.surname })|
                <a asp-controller="Driver" asp-action="Coment" asp-route-id="@item.driverId">Coments</a>|
                <a asp-controller="Coment" asp-action="Create" asp-route-id="@item.driverId">add Comments</a>

            </td>
        </tr>
}
    </tbody>
</table>
