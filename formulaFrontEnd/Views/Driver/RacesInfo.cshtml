@model IEnumerable<formulaFrontEnd.ViewModels.RaceViewModel.Race>

@{
    ViewData["Title"] = "RacesInfo";
}

<h1>Races Info</h1>

<div>
<table class="table bg-light table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.round)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.raceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.season)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.round)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.url)">@Html.DisplayFor(modelItem => item.url)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.raceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
